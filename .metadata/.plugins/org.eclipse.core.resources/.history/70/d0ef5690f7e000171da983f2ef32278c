
public class hora {

	private int hora;
	private int minuto;
	private int segundo;
	
	hora(){
		hora=0;
		minuto=0;
		segundo=0;
	}

	public int getHora() {
		return hora;
	}

	public void setHora(int hora) {
		this.hora = hora;
	}

	public int getMinuto() {
		return minuto;
	}

	public void setMinuto(int minuto) {
		this.minuto = minuto;
	}

	public int getSegundo() {
		return segundo;
	}

	public void setSegundo(int segundo) {
		this.segundo = segundo;
	}
	
	public void contaSegundos() {
		if (segundo==59) {
			minuto+=1;
		}
		if (minuto==59) {
			minuto=0;
			hora+=1;
		}
		if (hora==23) {
			hora=0;
		}
		segundo = (segundo + 1)%60;
		System.out.printf("%2d", segundo);
	}
	
}
