import java.util.*;
public class TragaBolasUse {

	public static void main(String[] args) {
		TragaBolas hipo = new TragaBolas();
		int menu;
		Scanner teclado=new Scanner(System.in);
		
		do {
			System.out.println(" 1: Crear tragaBolas.\n 2: Darle de comer.\n 3: Hacerle dormir.\n 4: Ver estado.\n 0: Fin.");
			menu = teclado.nextInt();
			switch(menu) {
				case 1:
					System.out.println("Introduce el color");
					hipo.setColor();
					System.out.println("Introduce el maximo de bolas");
					hipo.setmaxBolas();
					break;
				case 2:
					hipo.comer();
					break;
				case 3:
					hipo.dormir();
					break;
			}
		}while(menu!=0);
		
		System.out.println(hipo.visualizar());
		
	}

}
